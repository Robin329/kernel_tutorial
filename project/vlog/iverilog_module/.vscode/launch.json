{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Verilog",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/${file}.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compile Verilog",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable target async mode",
                    "text": "target async",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}